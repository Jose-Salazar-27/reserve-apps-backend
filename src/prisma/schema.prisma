datasource db {
    url      = env("DATABASE_URL")
    provider = "postgresql"
}

generator client {
    provider = "prisma-client-js"
}

model Order {
    id         Int      @id @default(autoincrement())
    createdAt  DateTime @default(now())
    owner      String
    products   Product[]
    product_id Int
    total      Float
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String
  price    Int
  quantity Int
  order    Order? @relation(fields: [orderId], references: [id])
  orderId  Int?
}
